  "engines": {
    "node": "^20.14.0",
    "npm": "^8.3.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write"
    ]
  }
