{
  "name": "lindabi-api",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "clean": "rimraf ./lib",
    "build:tsoa": "tsoa spec-and-routes && tsc",
    "build": "npm run clean && npm run build:tsoa && tsc",
    "start": "node lib/index.js",
    "lint": "npx eslint src/**/*.ts --no-ignore --no-warn-ignored",
    "lint-ci": "npm run lint -- --format junit -o reports/junit/js-lint-results.xml",
    "lint:fix": "npm run lint -- --fix ",
    "test": "npm run build:tsoa && jest",
    "test:watch": "jest --watch",
    "test-ci": "npm test -- --ci --color --coverage --verbose --reporters=default --reporters=jest-junit",
    "db:create": "sequelize --options-path sequalizerc.js db:create",
    "db:migrate": "sequelize --options-path sequalizerc.js db:migrate",
    "db:seed": "sequelize --options-path sequalizerc.js db:seed:all",
    "migrate": "npm run db:migrate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/identity": "^4.4.1",
    "@azure/service-bus": "^7.9.5",
    "@react-pdf/renderer": "^3.4.4",
    "@types/jsonwebtoken": "^9.0.6",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.1",
    "config": "^3.3.12",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "http-errors": "^2.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "postmark": "^4.0.4",
    "qrcode": "^1.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sequelize": "^6.37.3",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "typescript-cookie": "^1.0.6",
    "winston": "^3.13.1"
  },
