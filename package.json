{
  "name": "lindabi-api",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "clean": "rimraf ./lib",
    "build:tsoa": "tsoa spec-and-routes && tsc",
    "build": "npm run clean && npm run build:tsoa && tsc",
    "start": "node lib/index.js",
    "lint": "eslint . --ext .ts,.js --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format",
    "lint-ci": "npm run lint -- --format junit -o reports/junit/js-lint-results.xml",
    "test": "npm run build:tsoa && jest",
    "test:watch": "jest --watch",
    "test-ci": "npm test -- --ci --color --coverage --verbose --reporters=default --reporters=jest-junit",
    "db:create": "sequelize --options-path sequalizerc.js db:create",
    "db:migrate": "sequelize --options-path sequalizerc.js db:migrate",
    "db:seed": "sequelize --options-path sequalizerc.js db:seed:all",
    "seed": "sequelize --options-path sequalizerc.js db:seed",
    "migrate": "npm run db:migrate",
    "test:milestone-notifications": "npm run build && node lib/scripts/test-milestone-notifications.js",
    "backfill:search": "npm run build && node lib/scripts/backfill-tender-items-search.js",
    "check:orphaned": "npm run build && node lib/scripts/check-orphaned-records.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/service-bus": "^7.9.5",
    "@azure/storage-blob": "^12.29.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "body-parser": "^2.2.1",
    "class-validator": "^0.14.3",
    "config": "^4.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "file-type": "^21.1.1",
    "http-errors": "^2.0.1",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "postmark": "^4.0.5",
    "qrcode": "^1.5.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.5",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "typescript-cookie": "^1.0.6",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/config": "^3.3.5",
    "@types/dotenv": "^8.2.3",
    "@types/eslint__js": "^9.14.0",
    "@types/express": "^5.0.6",
    "@types/file-type": "^10.9.3",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.2",
    "@types/postmark": "^2.0.3",
    "@types/qrcode": "^1.5.6",
    "@types/sharp": "^0.32.0",
    "@types/speakeasy": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "3.7.4",
    "rimraf": "^6.1.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4",
    "swagger-ui-dist": "^5.30.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": "^24",
    "npm": "^10"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
